<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".goodpractices"
    android:background="#FF000000"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GOOD PRACTICES"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="60dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <ImageView

            android:layout_width="140dp"
            android:layout_height="110dp"
            android:src="@drawable/soil"
            android:layout_marginRight="70dp">

        </ImageView>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:src="@drawable/good2"
            android:scaleType="centerCrop">

        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/g1"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Healthy Soil"
            android:layout_marginRight="120dp"
            android:textSize="10dp"
            >

        </Button>
        <Button
            android:id="@+id/good2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Fertilizer"
            android:textSize="10dp"
            >

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:src="@drawable/good3"
            android:layout_marginRight="70dp"
            android:scaleType="centerCrop">

        </ImageView>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:src="@drawable/good4"
            android:scaleType="centerCrop">

        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/good3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Soil PIcking"
            android:layout_marginRight="120dp"
            android:textSize="10dp"
            >

        </Button>
        <Button
            android:id="@+id/good4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="watering"
            android:textSize="10dp"
            >

        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:src="@drawable/logo"
            android:layout_marginRight="70dp">

        </ImageView>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:src="@drawable/logo">

        </ImageView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Healthy Soil"
            android:layout_marginRight="120dp"
            android:textSize="10dp"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Healthy Soil"
            android:textSize="10dp"
            >

        </Button>
    </LinearLayout>

</LinearLayout>